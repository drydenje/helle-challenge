<style>
  /* Upcoming Events Start */
  .upcoming-parent {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(5, 1fr);
      grid-column-gap: 0px;
      grid-row-gap: 0px;
      gap: 10px;
    }

    .upcoming-details {
      grid-column-start: span 2;
    }

    @media (max-width: 600px) {
      .upcoming-date, .upcoming-event, .upcoming-details {
        grid-column-start: span 2;
      }
      
      .upcoming-heading {
        display: none;
      }
    }
  /* Upcoming Events End */
</style>