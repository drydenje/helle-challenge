---
import Layout from '../layouts/Layout.astro';
---

<!-- Thoughts:
  - use grid for a better mobile look
-->

<Layout>
	<section class="upcoming-parent">
    <div class="upcoming-heading">Date/Time</div>
    <div class="upcoming-heading">Event</div>
    <div class="upcoming-date">Sundays 10:30 a.m.</div>
    <div class="upcoming-event">Worship Service</div>
    <div class="upcoming-date">Wednesdays 9:30 a.m.</div>
    <div class="upcoming-event">Men's Bible Study</div>
    <div class="upcoming-date">Mon Feb 10, 1:00 p.m.</div>
    <div class="upcoming-event">Jean Gordon Auxiliary</div>
    <div class="upcoming-date">Wed Feb 26, 3:00 p.m.</div>
    <div class="upcoming-event">Session Meeting</div>
    <div class="upcoming-date">Sunday Mar 9, 10:30 a.m.</div>
    <div class="upcoming-event">Worship / Annual Meeting</div>
    <div class="upcoming-details">Soup & Buns after Worship followed by dive Annual Meeting</div>
    <div class="upcoming-date">Monday Mar 10, 1:00 p.m.</div>
    <div class="upcoming-event">Jean Gordon Auxiliary Meeting</div>
    <div class="upcoming-date">Sunday May 25, 10:30 a.m.</div>
    <div class="upcoming-event">Anniversary Service</div>
    <div class="upcoming-details">Celebrating our 203rd Anniversary</div>
  </section>
</Layout>

<style>
  /* Upcoming Events Start */
  .upcoming-parent {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(5, 1fr);
      grid-column-gap: 0px;
      grid-row-gap: 0px;
      gap: 10px;
    }

    .upcoming-details {
      grid-column-start: span 2;
    }

    @media (max-width: 600px) {
      .upcoming-date, .upcoming-event, .upcoming-details {
        grid-column-start: span 2;
      }
      
      .upcoming-heading {
        display: none;
      }
    }
  /* Upcoming Events End */
</style>